<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xavidram.stickercv.MainActivity">

    <TextView
        android:text="Welcome!"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Start Routine"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:id="@+id/ma_btn_StartRoutine"
        android:background="@drawable/round_btn"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/ma_RoutineSpinner"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:text="Create Routine"
        android:layout_height="wrap_content"
        android:id="@+id/ma_btn_CreateRoutine"
        android:background="@drawable/round_btn"
        android:textColor="@color/colorWhite"
        android:layout_width="150dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/ma_RoutineSpinner" />

    <Button
        android:text="Edit a Routines"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/ma_btn_EditRoutine"
        android:background="@drawable/round_btn"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ma_btn_CreateRoutine"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.71"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/ma_RoutineSpinner" />

    <Spinner
        android:layout_height="48dp"
        android:id="@+id/ma_RoutineSpinner"
        android:layout_width="320dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTextView" />
</android.support.constraint.ConstraintLayout>
